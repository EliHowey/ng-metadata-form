{
    "$schema": "http://json-schema.org/draft-07/schema",
    "id": "form-question",
    "contents": [
        {
            "type": "question",
            "id": "q-name",
            "questionText": "Name",
            "controls": [
                {
                    "id": "q-name--c-first-name",
                    "controlType": "text",
                    "label": "First name",
                    "required": true
                },
                {
                    "id": "q-name--c-middle-name",
                    "controlType": "text",
                    "label": "Middle name"
                },
                {
                    "id": "q-name--c-last-name",
                    "controlType": "text",
                    "label": "Last name",
                    "required": true
                }
            ]
        },
        {
            "type": "question",
            "id": "q-address",
            "questionText": "Address",
            "required": true,
            "controls": [
                {
                    "controlType": "text",
                    "id": "q-address--line-1",
                    "label": "Address line 1",
                    "required": true,
                    "placeholder": "123 Anywhere Street"
                },
                {
                    "controlType": "text",
                    "id": "q-address--line-2",
                    "label": "Address line 2",
                    "placeholder": "Apt. C"
                },
                {
                    "controlType": "text",
                    "id": "q-address--city",
                    "label": "City",
                    "required": true,
                    "placeholder": "Anytown"
                },
                {
                    "controlType": "select",
                    "id": "q-address--state",
                    "label": "State",
                    "required": true,
                    "options": ["Alabama (AL)", "Alaska (AK)", "Arizona (AZ)", "..."]
                },
                {
                    "controlType": "text",
                    "id": "q-address--zip",
                    "label": "ZIP",
                    "required": true,
                    "placeholder": "55555"
                }
            ]
        }
    ]
}
