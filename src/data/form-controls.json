{
    "$schema": "http://json-schema.org/draft-07/schema",
    "id": "form-controls",
    "contents": [
        {
            "type": "control",
            "id": "c-checkbox",
            "controlType": "checkbox",
            "required": true,
            "label": "Unchecked by default",
            "helpText": "Help text"
        },
        {
            "type": "control",
            "id": "c-checkbox-checked",
            "controlType": "checkbox",
            "required": true,
            "label": "Checked by default",
            "helpText": "Help text",
            "checked": true
        },
        {
            "type": "control",
            "id": "c-date",
            "controlType": "date",
            "label": "Enter a date",
            "helpText": "Help text",
            "required": true
        },
        {
            "type": "control",
            "id": "c-date-restricted",
            "controlType": "date",
            "label": "Choose a date in the allowed range",
            "helpText": "Help text",
            "required": true,
            "min": "2020-10-25",
            "max": "2020-11-25"
        },
        {
            "type": "control",
            "id": "c-email",
            "controlType": "email",
            "required": true,
            "label": "Email address",
            "helpText": "Help text",
            "placeholder": "email@example.com"
        },
        {
            "type": "control",
            "id": "c-number",
            "controlType": "number",
            "required": true,
            "label": "Enter a number:",
            "helpText": "Help text"
        },
        {
            "type": "control",
            "id": "c-phone",
            "controlType": "phone",
            "label": "Phone number",
            "helpText": "Help text",
            "required": true
        },
        {
            "type": "control",
            "id": "c-radio-group",
            "controlType": "radio-group",
            "label": "Radio group",
            "helpText": "Help text",
            "required": true,
            "options": [
                "String option",
                {
                    "label": "Option label 1",
                    "value": "option-value-1"
                },
                {
                    "label": "Option (selected by default)",
                    "value": "option-value-2",
                    "selected": true
                }
            ]
        },
        {
            "type": "control",
            "id": "c-select",
            "controlType": "select",
            "label": "Select control",
            "helpText": "Help text",
            "required": true,
            "options": [
                "String option",
                {
                    "label": "Option label",
                    "value": "option-value-1"
                },
                {
                    "label": "Option group",
                    "options": [
                        "String option",
                        {
                            "label": "Option label",
                            "value": "option-value-2"
                        }
                    ]
                }
            ]
        },
        {
            "type": "control",
            "id": "c-text",
            "controlType": "text",
            "label": "Enter a value:",
            "helpText": "Help text goes here",
            "required": true,
            "placeholder": "Placeholder value"
        },
        {
            "type": "control",
            "id": "c-textarea",
            "controlType": "textarea",
            "required": true,
            "label": "Enter free-form text:",
            "helpText": "Help text",
            "placeholder": "Placeholder value"
        }
    ]
}
