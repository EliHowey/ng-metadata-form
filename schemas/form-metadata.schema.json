{
    "$id": "http://example.com/schemas/form-metadata.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Form Metadata",
    "description": "Metadata required to render an HTML form dynamically.",
    "type": "object",
    "properties": {
        "id": { "$ref": "./properties/id.schema.json#/definitions/id" },
        "contents": {
            "description": "Contents of the form. This can be a series of form questions or sections.",
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    { "$ref": "./form-section.schema.json#/definitions/FormSection" },
                    { "$ref": "./form-question.schema.json#/definitions/FormQuestion" },
                    { "$ref": "./form-control.schema.json#/definitions/FormControl" }
                ],
                "properties": {
                    "type": {
                        "description": "Type of form contents. Forms can contain sections, questions, or controls."
                    }
                }
            },
            "minItems": 1
        }
    },
    "required": ["contents"]
}
