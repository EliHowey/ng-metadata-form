{
    "$id": "http://example.com/schemas/form-question.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "FormQuestion": {
            "title": "Form Section",
            "description": "A question within a dynamic Angular form.",
            "type": "object",
            "properties": {
                "type": { "const": "question" },
                "id": { "$ref": "./properties/id.schema.json#/definitions/id" },
                "required": {
                    "description": "Whether the user is required to provide a value for the question.",
                    "type": "boolean"
                },
                "questionText": {
                    "description": "Display text of the form question.",
                    "type": "string"
                },
                "helpText": {
                    "description": "Help text for the form question.",
                    "type": "string"
                },
                "controls": {
                    "description": "Form controls for the question.",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "./form-control.schema.json#/definitions/FormControl" }
                }
            },
            "required": ["id", "questionText", "controls"],
            "additionalProperties": false
        }
    }
}
