{
    "$schema": "../schemas/form-metadata.schema.json",
    "id": "mixed-contents",
    "contents": [
        {
            "type": "section",
            "id": "s-demographics",
            "title": "Demographics",
            "contents": [
                {
                    "type": "question",
                    "id": "q-name",
                    "questionText": "What is your name?",
                    "required": true,
                    "controls": [
                        {
                            "controlType": "text",
                            "id": "q-name--first-name",
                            "label": "First name",
                            "required": true
                        },
                        {
                            "controlType": "text",
                            "id": "q-name--middle-name",
                            "label": "Middle name"
                        },
                        {
                            "controlType": "text",
                            "id": "q-name--last-name",
                            "label": "Last name",
                            "required": true
                        }
                    ]
                },
                {
                    "type": "question",
                    "id": "q-address",
                    "questionText": "Address",
                    "required": true,
                    "controls": [
                        {
                            "controlType": "text",
                            "id": "q-address--line-1",
                            "label": "Address line 1",
                            "required": true,
                            "placeholder": "123 Anywhere Street"
                        },
                        {
                            "controlType": "text",
                            "id": "q-address--line-2",
                            "label": "Address line 2",
                            "placeholder": "Apt. C"
                        },
                        {
                            "controlType": "text",
                            "id": "q-address--city",
                            "label": "City",
                            "required": true,
                            "placeholder": "Anytown"
                        },
                        {
                            "controlType": "select",
                            "id": "q-address--state",
                            "label": "State",
                            "required": true,
                            "options": ["Alabama (AL)", "Alaska (AK)", "Arizona (AZ)", "..."]
                        },
                        {
                            "controlType": "text",
                            "id": "q-address--zip",
                            "label": "ZIP",
                            "required": true,
                            "placeholder": "55555"
                        }
                    ]
                }
            ]
        },
        {
            "type": "question",
            "id": "q-height",
            "questionText": "Height",
            "required": true,
            "controls": [
                {
                    "controlType": "number",
                    "id": "q-height--feet",
                    "required": true,
                    "label": "Height (feet)",
                    "min": 0
                },
                {
                    "controlType": "number",
                    "id": "q-height--inches",
                    "required": true,
                    "label": "Height (inches)",
                    "min": 0,
                    "max": 11
                }
            ]
        },
        {
            "type": "control",
            "controlType": "checkbox",
            "id": "c-terms",
            "label": "I agree to the Terms and Conditions.",
            "required": true
        }
    ]
}
