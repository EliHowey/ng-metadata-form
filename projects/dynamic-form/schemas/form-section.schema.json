{
    "$id": "http://example.com/schemas/form-section.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "FormSection": {
            "title": "Form Section",
            "description": "A section of a dynamic Angular form.",
            "type": "object",
            "properties": {
                "type": { "const": "section" },
                "id": { "$ref": "./properties/id.schema.json#/definitions/id" },
                "title": {
                    "description": "Title of the form section.",
                    "type": "string"
                },
                "contents": {
                    "description": "Contents of the form section.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "properties": {
                            "type": {
                                "description": "Type of form section contents. Form sections can contain controls, questions, or other sections.",
                                "type": "string"
                            }
                        },
                        "oneOf": [
                            { "$ref": "#/definitions/FormSection" },
                            { "$ref": "./form-question.schema.json#/definitions/FormQuestion" },
                            { "$ref": "./form-control.schema.json#/definitions/FormControl" }
                        ]
                    }
                }
            },
            "required": ["id", "contents"]
        }
    }
}
